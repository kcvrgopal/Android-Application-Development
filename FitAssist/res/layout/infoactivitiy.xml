<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp" >

    <TextView
        android:id="@+id/agelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignParentLeft="true"
        android:text="Enter your age" 
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/weightlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weight"
        android:layout_alignBottom="@+id/weight"
        android:layout_alignParentLeft="true"
        android:text="Enter your weight" 
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Height in cms"
        android:inputType="number" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/height"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="weight in pounds"
        android:inputType="number" />

    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/weight"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="age in years"
        android:inputType="number" >

    </EditText>

    <TextView
        android:id="@+id/bodyfatlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bodyfat"
        android:layout_centerVertical="true"
        android:text="Enter your body fat percentage"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/bodyfat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bodyfatlabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:text="15"
        android:textColor="#FFFFFF"
        android:textAlignment="1" />

    <TextView
        android:id="@+id/sexlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bodyfat"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/saveinfo"
        android:text="I&apos;m "
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/saveinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bodyfat"
        android:layout_below="@+id/sex"
        android:onClick="saveInfo"
        android:text="Save My Information"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/age"
        android:layout_alignTop="@+id/bodyfat"
        android:layout_marginTop="100px"
        android:entries="@array/sex" />

    <TextView
        android:id="@+id/heightlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/height"
        android:layout_alignBottom="@+id/height"
        android:layout_alignParentLeft="true"
        android:text="Enter your height"
        android:textColor="#FFFFFF" />

</RelativeLayout>